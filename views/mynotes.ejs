<%- include('partials/header'); -%>
    <div class="container row4">
        <% notes=notes.reverse() %>
            <% for ( let note of notes ) {%>

                <div class="row my-3 align-items-center">
                    <div class="col-8">


                        <div class="card bg-secondary mt-3 text-white">
                            <div class="card-header">
                                <p class="text-white">
                                    <%=note.title %>
                                        <a href="/diary/<%=note._id%> " style="color: salmon;">
                                            <i style='font-size:15px' class='fas '>&#xf360;</i>
                                        </a>
                                        
                                </p>
                                <span>

                            </div>
                            <div class="card-body">
                                <div class="card-text text-truncate">
                                    <%=note.textnote %>
                                </div>
                            </div>
                            <div class="card-footer" style="color: gold;">
                                Last updated <%=note.mytime %>
                                    <span>
                                        <a class="link-secondary text-warning" href="/diary/<%=note._id %>/edit ">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                <path
                                                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                            </svg>
                                        </a>
                                    </span>
                            </div>
                        </div>

                    </div>
                </div>
                <% } %>
    </div>
    <%- include('partials/footer'); -%>
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        </body>

        </html>